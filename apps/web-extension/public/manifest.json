{
  "manifest_version": 3,

  "name": "Cal.com",
  "description": "Cal.com Chrome Extension",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "favicon-48x48.png",
    "128": "favicon-128x128.png"
    },
  "action": {
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
